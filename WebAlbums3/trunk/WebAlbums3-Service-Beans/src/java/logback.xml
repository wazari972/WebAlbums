<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="net.wazariFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>WebAlbums.Errors</file>
        <append>true</append>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>warn</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>WebAlbums.Errors.%i</fileNamePattern>
            <maxIndex>5</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10000000</maxFileSize>
        </triggeringPolicy>
        <layout class="ch.qos.logback.classic.html.HTMLLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss}, %p, %c, %t, %M %m%n</pattern>
        </layout>
    </appender>
    <appender name="RootFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>WebAlbums</file>
        <append>true</append>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>debug</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>WebAlbums.%i</fileNamePattern>
            <maxIndex>5</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>1000000</maxFileSize>
        </triggeringPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss}, %p, %c, %M %m%n</pattern>
        </layout>
    </appender>
    <appender name="RootConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>info</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss}, %p, %c, %t, %L, %C{1} %m%n</pattern>

        </layout>
    </appender>


    <logger additivity="false" name="net.wazari">
        <level value="error"/>
        <appender-ref ref="net.wazariFileAppender"/>
    </logger>

    <root>
        <level value="info"/>

        <appender-ref ref="RootFileAppender"/>
        <appender-ref ref="RootConsoleAppender"/>
    </root>
</configuration>
