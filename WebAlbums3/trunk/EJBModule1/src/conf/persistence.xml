   <persistence-unit name="WebAlbums-MySQL-StandAlone" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>

    <class>net.wazari.dao.jpa.entity.JPAAlbum</class>
    <class>net.wazari.dao.jpa.entity.JPAUtilisateur</class>
    <class>net.wazari.dao.jpa.entity.JPAPhoto</class>
    <class>net.wazari.dao.jpa.entity.JPATag</class>
    <class>net.wazari.dao.jpa.entity.JPATheme</class>
