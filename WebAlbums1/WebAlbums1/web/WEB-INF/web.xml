<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <servlet>
    <servlet-name>Index</servlet-name>
    <servlet-class>display.Index</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>Config</servlet-name>
    <servlet-class>display.Config</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Albums</servlet-name>
    <servlet-class>display.Albums</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Photos</servlet-name>
    <servlet-class>display.Photos</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Users</servlet-name>
    <servlet-class>display.Users</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Images</servlet-name>
    <servlet-class>display.Images</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Tags</servlet-name>
    <servlet-class>display.Tags</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Choix</servlet-name>
    <servlet-class>display.Choix</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Index</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Index</servlet-name>
    <url-pattern>/Index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Config</servlet-name>
    <url-pattern>/Config</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Albums</servlet-name>
    <url-pattern>/Albums</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Photos</servlet-name>
    <url-pattern>/Photos</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Users</servlet-name>
    <url-pattern>/Users</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Images</servlet-name>
    <url-pattern>/Images</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Tags</servlet-name>
    <url-pattern>/Tags</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Choix</servlet-name>
    <url-pattern>/Choix</url-pattern>
  </servlet-mapping>
  
  <context-param>
    <param-name>location</param-name>
    <param-value>home</param-value>
  </context-param>

  <context-param>
    <param-name>root_dir</param-name>
    <param-value>../</param-value>
  </context-param>

  <context-param>
    <param-name>read_only</param-name>
    <param-value>false</param-value>
  </context-param>

  <context-param>
    <param-name>has_internet</param-name>
    <param-value>true</param-value>
  </context-param>

  <context-param>
    <param-name>wants_stats</param-name>
    <param-value>false</param-value>
  </context-param>

  <context-param>
    <param-name>wants_queries</param-name>
    <param-value>false</param-value>
  </context-param>

  <context-param>
    <param-name>lighten_db</param-name>
    <param-value>false</param-value>
  </context-param>

  <context-param>
    <param-name>sgbd</param-name>
    <param-value>hsqldb</param-value>
  </context-param>
</web-app>
